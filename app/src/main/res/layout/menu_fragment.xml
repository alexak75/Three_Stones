<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="60dp">

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rb_group">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/radiobutton_black_title"
            android:layout_marginBottom="15dp"
            android:id="@+id/rb_black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/radiobutton_white_title"
            android:layout_marginBottom="15dp"
            android:id="@+id/rb_white" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/radiobutton_clear_title"
            android:layout_marginBottom="15dp"
            android:id="@+id/rb_clear" />

    </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Move"
            android:id="@+id/button"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"/>


</RelativeLayout>
